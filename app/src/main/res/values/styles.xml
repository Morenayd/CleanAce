<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TextInputEdiText.Dropdown">
        <item name="android:padding">12dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AppTheme.TextAppearance.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.TextAppearance.TextInputLayout</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextAppearance.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance"></style>

    <style name="AppTheme.TextInputEdiText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.TextInputLayoutContainer">
        <item name="android:paddingStart">4dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/secondaryWhite</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">4dp</item>
    </style>

    <style name="AppTheme.HorizontalButtonAppearance" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="AppTheme.TextAppearance.HyperLinkTextView" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">6dp</item>
    </style>

</resources>